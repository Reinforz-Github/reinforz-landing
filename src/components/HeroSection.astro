---
import Container from "./Container.astro";
---

<div class="relative">
  <div
    aria-hidden="true"
    class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"
    >
    </div>
    <div
      class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
    >
    </div>
  </div>
  <Container>
    <div class="relative pt-36 ml-auto">
      <div class="lg:w-2/3 text-center mx-auto">
        <h1
          class="text-gray-900 dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl"
          style="line-height:1.15 ;"
        >
          Reinforcing Human Learning With <span
            class="text-primary dark:text-primary">AI</span
          >
        </h1>
        <p class="mt-8 text-gray-700 dark:text-gray-300">
          Reinforz is an innovative platform for learners, students, and
          educators to collaborate, reinforce and share their learning with the
          help of artificial intelligence.
        </p>
        <div class="mt-16 flex flex-wrap justify-center gap-y-4 gap-x-6">
          <a
            href="https://app.reinforz.ai/"
            class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
          >
            <span class="relative text-base font-semibold text-white"
              >Get started</span
            >
          </a>
          <a
            href="https://discord.gg/K5QQnjY3UQ"
            class="relative flex h-11 w-full items-center justify-between px-6 before:absolute before:inset-0 before:border before:border-solid before:bg-primary/10 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 dark:before:border-gray-600 border-primary sm:w-max"
          >
            <span
              class="relative text-base font-semibold text-primary dark:text-white"
              >Discord</span
            ><img
              src="./discord.svg"
              class="z-10 ml-2.5"
              height="20"
              width="20"
            />
          </a>
        </div>
      </div>
    </div>
  </Container>
</div>
